				{
					"name": "Screenshot with All Options",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/screenshot?url=https://example.com&format=webp&width=1920&height=1080&quality=90&full_page=false&dark_mode=false&block_ads=true&block_cookie_banners=true&delay=0&cache=true&cache_ttl=86400&response_type=binary",
							"host": ["{{base_url}}"],
							"path": ["v1", "screenshot"],
							"query": [
								{
									"key": "url",
									"value": "https://example.com",
									"description": "Required. URL to capture."
								},
								{
									"key": "format",
									"value": "webp",
									"description": "png, jpeg, webp, or pdf. Default: png."
								},
								{
									"key": "width",
									"value": "1920",
									"description": "Viewport width 320-3840. Default: 1280."
								},
								{
									"key": "height",
									"value": "1080",
									"description": "Viewport height 200-10000. Default: 800."
								},
								{
									"key": "quality",
									"value": "90",
									"description": "Image quality 1-100. Default: 90."
								},
								{
									"key": "full_page",
									"value": "false",
									"description": "Capture full scrollable page. Default: false."
								},
								{
									"key": "dark_mode",
									"value": "false",
									"description": "Dark mode emulation. Default: false."
								},
								{
									"key": "block_ads",
									"value": "true",
									"description": "Block ads and trackers. Default: true."
								},
								{
									"key": "block_cookie_banners",
									"value": "true",
									"description": "Remove cookie consent banners. Default: true."
								},
								{
									"key": "delay",
									"value": "0",
									"description": "Wait ms after page load before capture (0-10000). Default: 0."
								},
								{
									"key": "cache",
									"value": "true",
									"description": "Enable R2 caching. Default: true."
								},
								{
									"key": "cache_ttl",
									"value": "86400",
									"description": "Cache TTL in seconds (clamped to plan max). Default: 86400."
								},
								{
									"key": "response_type",
									"value": "binary",
									"description": "Response format: binary (raw image) or json (base64 data URI with metadata). Default: binary."
