{
	"info": {
		"name": "SnapRender API",
		"description": "Screenshot any website via API. Supports PNG, JPEG, WebP, and PDF output with device emulation, dark mode, ad blocking, and cookie banner removal.\n\n**Base URL:** `https://app.snap-render.com`\n\n**Authentication:** Pass your API key in the `X-API-Key` header.\n\n**Get a free API key:** https://app.snap-render.com/auth/signup (50 free screenshots/month, no credit card required)\n\n**Documentation:** https://app.snap-render.com\n\n**SDKs:**\n- Node.js: `npm install snaprender`\n- Python: `pip install snaprender`",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "apikey",
		"apikey": [
			{
				"key": "key",
				"value": "X-API-Key",
				"type": "string"
			},
			{
				"key": "value",
				"value": "{{api_key}}",
				"type": "string"
			},
			{
				"key": "in",
				"value": "header",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://app.snap-render.com",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "YOUR_API_KEY",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Screenshot",
			"item": [
				{
					"name": "Take Screenshot (PNG)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/screenshot?url=https://example.com&format=png&width=1280&height=800",
							"host": ["{{base_url}}"],
							"path": ["v1", "screenshot"],
							"query": [
								{
									"key": "url",
									"value": "https://example.com",
									"description": "Required. The URL to capture."
								},
								{
									"key": "format",
									"value": "png",
									"description": "Output format: png, jpeg, webp, or pdf. Default: png."
								},
								{
									"key": "width",
									"value": "1280",
									"description": "Viewport width in pixels (320-3840). Default: 1280."
								},
								{
									"key": "height",
									"value": "800",
									"description": "Viewport height in pixels (200-10000). Default: 800."
								}
							]
						},
						"description": "Capture a basic PNG screenshot of a website."
					}
				},
				{
					"name": "Take Screenshot (WebP)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/screenshot?url=https://example.com&format=webp&quality=85&width=1920&height=1080",
							"host": ["{{base_url}}"],
							"path": ["v1", "screenshot"],
							"query": [
								{
									"key": "url",
									"value": "https://example.com"
								},
								{
									"key": "format",
									"value": "webp"
								},
								{
									"key": "quality",
									"value": "85",
									"description": "Image quality 1-100. Default: 90."
								},
								{
									"key": "width",
									"value": "1920"
								},
								{
									"key": "height",
									"value": "1080"
								}
							]
						},
						"description": "Capture a WebP screenshot with custom quality. WebP produces 25-50% smaller files than PNG."
					}
				},
				{
					"name": "Take Screenshot (PDF)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/screenshot?url=https://example.com&format=pdf",
							"host": ["{{base_url}}"],
